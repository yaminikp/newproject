<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions Xpath Experimental 1.2//EN"
    "http://checkstyle.sourceforge.net/dtds/suppressions_1_2_xpath_experimental.dtd">

<suppressions>
    <!-- Allow multiple consecutive declarations without empty lines between. -->
    <!-- Ideally, we would restrict this to single-line declarations, but how is not clear. -->
    <suppress checks="EmptyLineSeparatorCheck"
              id="GeneralEmptyLineSeparator"
              message="should be separated from previous statement."/>
</suppressions>
